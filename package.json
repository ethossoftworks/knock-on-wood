{
    "name": "@ethossoftworks/knock-on-wood",
    "description": "A simple test framework for TypeScript",
    "authors": "Ryan Mitchener",
    "version": "1.0.3",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/ethossoftworks/knock-on-wood.git"
    },
    "keywords": [
        "testing",
        "typescript"
    ],
    "main": "dist/KnockOnWood.js",
    "files": [
        "dist/types/src/KnockOnWood.d.ts"
    ],
    "types": "dist/types/src/KnockOnWood.d.ts",
    "devDependencies": {
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "clean-webpack-plugin": "3.0.0",
        "prettier": "^1.19.1",
        "ts-loader": "^6.2.1",
        "typescript": "3.7.4"
    },
    "dependencies": {},
    "scripts": {
        "format": "npx prettier --write --loglevel warn src/**/*.ts test/**/*.ts",
        "build": "yarn format && npx webpack --env prod",
        "test": "yarn format && npx webpack --env test && node dist/KnockOnWood.test.js",
        "test-inspect": "yarn format && npx webpack --env test && node --inspect-brk dist/KnockOnWood.test.js"
    },
    "prettier": {
        "semi": false,
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false
    }
}